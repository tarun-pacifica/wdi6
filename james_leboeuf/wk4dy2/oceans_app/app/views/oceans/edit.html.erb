<form action="<%= ocean_path(@ocean.id) %>" method="post">
  <label>Name:</label>
  <input type="text" name="ocean[name]" value="<%= @ocean.name %>" autofocus>

  <label>Image:</label>
  <input type="text" name="ocean[image]" value="<%= @ocean.image %>">

  <label>Islands:</label>
  <input type="text" name="ocean[islands]" value="<%= @ocean.islands %>">

  <label>Volume:</label>
  <input type="text" name="oceans[volume]" value="<%= @ocean.volume %>">

  <label>Area:</label>
  <input type="text" name="oceans[area]" value="<%= @ocean.area %>">

  <button>Update Ocean!</button>

</form>