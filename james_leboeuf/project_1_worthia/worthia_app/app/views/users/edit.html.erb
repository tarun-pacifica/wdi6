<div class="user_edit">
  <h2>
    Editing
    <%= @user.name %>
  </h2>
  <%= form_for @user do |f| %>
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, :class => 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :email %>
      <%= f.email_field :email, :class => 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :avatar %>
      <%= f.text_field :image, :class => 'form-control' %>
    </div>
    <%= f.submit :class => 'btn btn-primary' %>
  <% end %>
</div>