<%= form_for @item do |f| %>

  <div class="form-group">
    <%= f.label :address %>
    <%= f.text_field :address, :size => 35, :class => "geocomplete form-control", :required => true %>
  </div>

  <div class="form-group">
    <%= f.label :item_name %>
    <%= f.text_field :name, :maxlength => 30, :size => 20, :class => 'form-control', :required => true %>
  </div>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_field :content, :maxlength => 140, :size => 20, :class => 'form-control', :required => true %>
  </div>

  <div class="form-group">
    <%= f.label :image %>
    <%= f.url_field :image, :class => 'form-control' %>
  </div>

  <%= fields_for :price do |p| %>
    <div class="form-group">
      <%= p.label :price %>
      <%= p.number_field :price, in:(1..10000), :class => 'form-control', :required => true %>
    </div>

  <% end %>

<label></label>
<%= f.submit :class => 'btn btn-primary' %>

<% end %>

<script src="http://maps.googleapis.com/maps/api/js?sensor=false&amp;libraries=places"></script>
<script src="jquery.geocomplete.js"></script>
<script type="text/javascript">
  $("input.geocomplete").geocomplete({
  details: ".details",
  detailsAttribute: "data-geo"
});
</script>
