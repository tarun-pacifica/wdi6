<div class="item_form">
  <%= form_for @item do |f| %>

    <div class="form-group">
      <%= f.label :address %> <span class="glyphicon glyphicon-globe"></span>
      <%= f.text_field :address, :size => 35, :class => "geocomplete form-control", :required => true %>
    </div>

    <div class="form-group">
      <%= f.label :item_name %> <span class="glyphicon glyphicon-tag"></span>
      <%= f.text_field :name, :maxlength => 30, :size => 20, :class => 'form-control', :required => true %>
    </div>

    <div class="form-group">
      <%= f.label :description %> <span class="glyphicon glyphicon-comment"></span>
      <%= f.text_field :content, :maxlength => 140, :size => 20, :class => 'form-control', :required => true %>
    </div>

    <div class="form-group">
      <%= f.label :image %> <span class="glyphicon glyphicon-picture"></span>
      <%= f.url_field :image, :class => 'form-control' %>
    </div>

    <%= fields_for :price do |p| %>
      <div class="form-group">
        <%= p.label :price %> <span class="glyphicon glyphicon-usd"></span>
        <%= p.number_field :price, in:(1..10000), :class => 'form-control', :step => 0.1, :required => true %>
      </div>

    <% end %>

  <%= f.submit :class => 'btn btn-primary' %>

  <% end %>
</div>

<script src="http://maps.googleapis.com/maps/api/js?sensor=false&amp;libraries=places"></script>
<script src="jquery.geocomplete.js"></script>
<script type="text/javascript">
  $("input.geocomplete").geocomplete({
  details: ".details",
  detailsAttribute: "data-geo"
});
</script>
