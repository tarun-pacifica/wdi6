<h3><%= @author.name %></h3>
<%= image_tag @author.image, :class => 'authorphoto' %>
<ul>
  <li>Date of Birth: <%= @author.dob.strftime('%A %B %d %Y') if @author.dob %></li>
  <li>Genre: <%= @author.genre %></li>
  <li>Gender: <%= @author.gender %></li>
</ul>

<ul>
  <li><%= link_to 'Edit', edit_author_path(@author) %></li><br>

  <li><%= link_to 'Delete', @author, :method => :delete, :data => { :confirm => 'Are you sure?' } %></li>
</ul>

<h3>Books</h3>
<% @author.books.each do |book| %>
  <%= link_to book.title, book %>
<% end %>