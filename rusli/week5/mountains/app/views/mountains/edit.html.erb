<form action="<%= mountain_path(@mountain.id) %>" method="post">
<label>Mountain:</label>
	<input type="text" name="mountain[mountain]" value="<%= @mountain.mountain %>" autofocus>
	<label>Feet:</label>
	<input type="text" name="mountain[feet]" value="<%= @mountain.feet %>">
	<label>Country:</label>
	<input type="text" name="mountain[country]" value="<%= @mountain.country %>">
	<label>Type:</label>
	<input type="text" name="mountain[category]" value="<%= @mountain.category %>">
	<label>Eruption:</label>
	<input type="text" name="mountain[eruption]" value="<%= @mountain.eruption %>">

	<button>Update!</button>
</form>