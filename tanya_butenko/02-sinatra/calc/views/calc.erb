
<form action='/calc'>
	<input name='first' placeholder='x'>
	<input name='operator' placeholder='operator'>
	<input name='second' placeholder='y'>
	<button>Calculate!</button>
</form>

<% if @result %> <!--with no equal sign no printing out, just control -->
	<p>x: <%= params[:first] %></p>
	<p>y: <%= params[:second] %></p>
	<p>Result: <b><%= @result %></b></p>
<%end%>