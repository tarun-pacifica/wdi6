	<h2>Edit the <%= @video['title'] %> video!</h2>
<div class="video_entry">
	<form method="post" action="/videos/<%= @video['id'] %>">
		<div class="questions">
			<label for="title"> Title: </label>
			<input id="title" name="title" value="<%= @video['title'] %>" required>
		</div>

		<div class="questions">
			<label for="description"> Description: </label>
			<textarea id="Description" type="text" name="description" value="<%=@video['description']%>"><%=@video['description']%></textarea>
		</div>

		<div class="questions">
			<label for="URL_code"> URL: </label>
			<input type="url" id="URL_code" name="URL_code" value="<%= @video['URL_code'] %>">
		</div>

		<div class="questions">
			<label for="genre"> Genre: </label>
			<input id="genre" name="genre" value="<%= @video['genre'] %>">
		</div>

		<div class="questions">
		<label></label>
	     <button>Submit </button>
	     </div>

	</form>
</div>

