<div class="row">

	<div class="video_column">
			<a href=" <%= @video['URL_code'] %> "> <h2><%= @video['title'] %></h2> </a>
			<%	@youtube_id = CGI.parse(URI.parse( @video['URL_code'] ).query)['v'][0] %>

			<div class="imbedded_video">
				<iframe width="420" height="315" src="//www.youtube.com/embed/<%= @youtube_id %>" frameborder="0" allowfullscreen></iframe>
			</div>
	</div> 


	<div class="video_column">
			<h3>Description: <em> <%= @video['description'] %> </em></h3>
			<h3>Genre: <em> <%= @video['genre'] %> </em></h3>

			<ul class="additional_edit_delete">
				<li> <a href="/videos/<%= @video['id'] %>/delete">Delete</a> </li>
				<li> <a href="/videos/<%= @video['id'] %>/edit">Edit</a> </li>
			</ul>
	</div>
</div>
