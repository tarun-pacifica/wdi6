<%= form_for @author do |f| %>
<p>
	<%= f.label :name  , "Name:" %>
	<%= f.text_field :name %>
</p>
<p>
	<%= f.label :nationality  , "Nationality:" %>
	<%= f.text_field :nationality %>
</p>
<p>
	<%= f.label :dob  , "DOB:" %>
	<%= f.text_field :dob %>
</p>
<p>
	<%= f.label :genre  , "Genre:" %>
	<%= f.text_field :genre %>
</p>
<p>
	<%= f.label :image  , "Image:" %>
	<%= f.url_field :image %>
</p>
	<label></label>
	<%= f.submit %>
<% end %>