
<form action="/oceans/<%= @ocean.id %>" method="post">
	<div class="entry">
		<label>Name: </label>
		<input type="text" name="ocean[name]" value="<%= @ocean.name %>" autofocus>
	</div>
	<div class="entry">
		<label>Image: </label>
		<input type="text" name="ocean[image]"  value="<%= @ocean.image %>" >
	</div>

		<div class="entry">
		<label>Depth: </label>
		<input type="text" name="ocean[depth]"  value="<%= @ocean.depth %>" >
	</div>

	<div class="entry">
		<label>Area: </label>
		<input type="text" name="ocean[area]"  value="<%= @ocean.area %>" >
	</div>
		<div class="entry">
		<label>Volume: </label>
		<input type="text" name="ocean[volume]"  value="<%= @ocean.volume %>" >
	</div>


<button>Submit</button>
</form>