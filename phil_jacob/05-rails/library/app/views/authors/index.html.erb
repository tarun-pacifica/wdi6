<% @authors.each do |author| %>

<ul>
	<%= image_tag(author.image, :class => 'thumbnail') %>
	<p>
	<%= link_to(author.name, author)  %>
	</p>
	<li>Nationality: <%= author.nationality %></li>
	<li>Date of Birth: <%= author.dob.strftime('%A %B %d %Y') if author.dob %></li>
	<li>Period: <%= author.period %></li>
</ul>

<% end %>