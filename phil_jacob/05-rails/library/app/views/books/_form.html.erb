<%= form_for @book do |f| %>

<p>
	<%= f.label :title, autofocus: true %>
	<%= f.text_field :title %>
</p>

<p>
	<%= f.label :year %>
	<%= f.text_field :year %>
</p>

<p>
	<%= f.label :image %>
	<%= f.url_field :image %>
</p>
<p>
	<%= f.label :isbn %>
	<%= f.text_field :isbn %>
</p>	

<p>	
	<%= f.label :author_id %>
	<%= f.select :author_id, Author.all.map {|author| [author.name, author.id]}, :include_blank => true, :prompt => 'Select author' %>
</p>		

<p>	
	<label></label>
	<%= f.submit %>
</p>		
<% end %>