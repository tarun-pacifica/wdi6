<h1>Listing moviies</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Obtained</th>
      <th>Released</th>
      <th>Rating</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @moviies.each do |moviie| %>
      <tr>
        <td><%= moviie.title %></td>
        <td><%= moviie.obtained %></td>
        <td><%= moviie.released %></td>
        <td><%= moviie.rating %></td>
        <td><%= moviie.description %></td>
        <td><%= link_to 'Show', moviie %></td>
        <td><%= link_to 'Edit', edit_moviie_path(moviie) %></td>
        <td><%= link_to 'Destroy', moviie, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

