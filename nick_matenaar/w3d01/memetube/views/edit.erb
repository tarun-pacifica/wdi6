<h2>Edit Video</h2>

<form action="/tubes/<%= @video['id'] %>" method="post">
	<div class="input-group">
		<label for="title">Title: </label>
		<input type="text" name="title" id="title" placeholder="Best Cat Video" value="<%= @video['title'] %>">
	</div>

	<div class="input-group">
	<label for="link">Link: </label>
	<input type="url" name="link" id="link" placeholder="http://youtube.com/?v=234sdfh3" value="<%= @video['link'] %>">
	</div>

	<div class="input-group">
		<button>Edit Video</button>
	</div>
	<p><a href="http://bit.ly/H8o4JG">URL not working? Click Here</a></p>
</form>